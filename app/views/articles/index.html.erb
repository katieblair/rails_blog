<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <td>Title</td>
      <td>Body</td>
      <td>Author</td>
      <td>Created At</td>
      <td>Updated At</td>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td>
          <a href="/articles/<%= article.id %>"><%= "#{article.title}" %></a>
        </td>
        <td>
          <%= article[:body] %>
        </td>
        <td>
          <%= article[:author] %>
        </td>
        <td>
          <%= article[:created_at] %>
        </td>
        <td>
          <%= article[:updated_at] %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3><a href="/articles/new">Post a new article</a></h3>
